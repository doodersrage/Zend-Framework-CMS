        <form method="post" name="invSrch">
          <label>Model Year</label>
          <select id="from" name="from">
            <option>1990</option>
            <option>2000</option>
          </select>
          -
          <select id="to" name="to">
            <option>1990</option>
            <option>2000</option>
          </select>
